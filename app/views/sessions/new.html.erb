<div class="container">
  <h1>Login</h1>

  <%= form_tag '/login' do %>

    <div class="text-field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="text-field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Submit" %>

  <% end %>
</div>